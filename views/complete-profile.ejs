<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FINALIZE IDENTITY | IUT MART</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: '#0b0e11',
                        surface: '#151a21',
                        action: '#2962ff',
                        border: '#2d3748',
                        text: {
                            primary: '#e2e8f0',
                            secondary: '#a0aec0'
                        },
                        bull: '#00e396',
                        bear: '#ff007a'
                    },
                    fontFamily: {
                        mono: ['"JetBrains Mono"', 'monospace'],
                        sans: ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@400;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #0b0e11;
            color: #e2e8f0;
        }

        .scanline {
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0) 50%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.2));
            background-size: 100% 4px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 50;
        }

        /* Avatar Upload Styling */
        .avatar-upload {
            position: relative;
            width: 80px;
            height: 80px;
            margin: 0 auto 10px;
            border-radius: 4px;
            overflow: hidden;
            background: #151a21;
            border: 1px dashed #2d3748;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .avatar-upload:hover {
            border-color: #2962ff;
            box-shadow: 0 0 10px rgba(41, 98, 255, 0.2);
        }

        .avatar-preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

        .avatar-placeholder {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #a0aec0;
            font-size: 24px;
        }

        .avatar-remove {
            display: none;
            position: absolute;
            top: -5px;
            right: -5px;
            width: 20px;
            height: 20px;
            background: #ff007a;
            color: white;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            cursor: pointer;
            border: none;
            z-index: 10;
        }
    </style>
</head>

<body class="h-screen flex items-center justify-center font-mono relative overflow-hidden">
    <!-- Scanline Overlay -->
    <div class="scanline"></div>

    <!-- Background Grid -->
    <div class="absolute inset-0 z-0 opacity-20"
        style="background-image: linear-gradient(#2d3748 1px, transparent 1px), linear-gradient(90deg, #2d3748 1px, transparent 1px); background-size: 30px 30px;">
    </div>

    <!-- Complete Profile Terminal -->
    <div
        class="relative z-10 w-full max-w-md bg-surface border border-border rounded-lg shadow-[0_0_30px_rgba(0,0,0,0.5)] overflow-hidden">

        <%- include('partials/header') %>
            <!-- Terminal Header -->
            <div class="bg-black/50 border-b border-border p-3 flex justify-between items-center">
                <div class="flex items-center space-x-2">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <div class="text-[10px] text-text-secondary tracking-widest">PROFILE_COMPLETION_WIZARD</div>
            </div>

            <div class="p-8">
                <div class="text-center mb-6">
                    <i class="fas fa-id-card text-4xl text-action mb-4 animate-pulse"></i>
                    <h2 class="text-xl font-bold text-white tracking-widest">FINALIZE IDENTITY</h2>
                    <p class="text-text-secondary text-xs mt-2">REQUIRED UNIVERSITY CREDENTIALS MISSING</p>
                </div>

                <% if (locals.error && locals.error.length> 0) { %>
                    <div
                        class="bg-bear/10 border border-bear/50 text-bear text-xs p-3 mb-6 rounded flex items-center gap-2">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>
                            <%= error %>
                        </span>
                    </div>
                    <% } %>

                        <form action="/auth/complete-profile" method="POST" enctype="multipart/form-data"
                            class="space-y-4">

                            <!-- Avatar Upload -->
                            <div class="flex justify-center mb-4">
                                <div style="position: relative;">
                                    <div class="avatar-upload" onclick="document.getElementById('avatarInput').click()">
                                        <!-- Default Placeholder Icon -->
                                        <% const hasAvatar=user.avatar && user.avatar !=='default-avatar.png' ; %>
                                            <div class="avatar-placeholder <%= hasAvatar ? 'hidden' : 'flex' %>"
                                                id="avatarPlaceholder">
                                                <i class="fas fa-camera text-text-secondary"></i>
                                            </div>

                                            <!-- Preview Image -->
                                            <img src="<%= hasAvatar ? user.avatar : '' %>" id="avatarPreview"
                                                class="avatar-preview <%= hasAvatar ? 'block' : 'hidden' %>" alt="">

                                            <input type="file" name="avatar" id="avatarInput" accept="image/*"
                                                style="display: none;" onchange="previewImage(this)">
                                    </div>
                                    <button type="button" class="avatar-remove <%= hasAvatar ? 'flex' : 'hidden' %>"
                                        id="removeBtn" onclick="removeImage()">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <div class="text-center text-[10px] text-text-secondary mt-1">UPLOAD ID PHOTO</div>
                                </div>
                            </div>

                            <div>
                                <label class="block text-[10px] text-text-secondary mb-1">STUDENT ID</label>
                                <input type="text" name="studentId" required placeholder="190041142" pattern="\d{9}"
                                    class="w-full bg-bg border border-border rounded py-2 px-3 text-sm text-white focus:border-action outline-none font-mono placeholder-text-secondary/30">
                            </div>

                            <div>
                                <label class="block text-[10px] text-text-secondary mb-1">CONTACT NO (BD)</label>
                                <input type="tel" name="contactNumber" required placeholder="01712345678"
                                    pattern="(?:\+88|88)?(01[3-9]\d{8})"
                                    class="w-full bg-bg border border-border rounded py-2 px-3 text-sm text-white focus:border-action outline-none font-mono placeholder-text-secondary/30">
                            </div>

                            <button type="submit"
                                class="w-full bg-action hover:bg-blue-600 text-white font-bold py-2.5 rounded text-sm transition tracking-widest border border-action/50 shadow-[0_0_15px_rgba(41,98,255,0.3)] mt-4">
                                CONFIRM & INITIALIZE DASHBOARD
                            </button>
                        </form>
            </div>

            <!-- Footer Status -->
            <div class="bg-bg border-t border-border p-2 flex justify-between text-[8px] text-text-secondary font-mono">
                <span>SYS.STATUS: <span class="text-bull">STABLE</span></span>
                <span>TOKEN: <span class="text-action animate-pulse">VALIDATED</span></span>
            </div>
    </div>

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('avatarPreview');
                    const placeholder = document.getElementById('avatarPlaceholder');
                    const removeBtn = document.getElementById('removeBtn');

                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    placeholder.style.display = 'none';
                    removeBtn.style.display = 'flex';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('avatarInput');
            const preview = document.getElementById('avatarPreview');
            const placeholder = document.getElementById('avatarPlaceholder');
            const removeBtn = document.getElementById('removeBtn');

            input.value = ''; // Clear input
            preview.src = '';
            preview.style.display = 'none';
            placeholder.style.display = 'flex';
            removeBtn.style.display = 'none';
        }
    </script>
</body>

</html>