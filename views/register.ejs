<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEW USER REGISTRATION | IUT MART</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: '#0b0e11',
                        surface: '#151a21',
                        action: '#2962ff',
                        border: '#2d3748',
                        text: {
                            primary: '#e2e8f0',
                            secondary: '#a0aec0'
                        },
                        bull: '#00e396',
                        bear: '#ff007a'
                    },
                    fontFamily: {
                        mono: ['"JetBrains Mono"', 'monospace'],
                        sans: ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@400;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #0b0e11;
            color: #e2e8f0;
        }

        .scanline {
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0) 50%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.2));
            background-size: 100% 4px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 50;
        }

        /* Avatar Upload Styling */
        .avatar-upload {
            position: relative;
            width: 80px;
            height: 80px;
            margin: 0 auto 10px;
            border-radius: 4px;
            overflow: hidden;
            background: #151a21;
            border: 1px dashed #2d3748;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .avatar-upload:hover {
            border-color: #2962ff;
            box-shadow: 0 0 10px rgba(41, 98, 255, 0.2);
        }

        .avatar-preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

        .avatar-placeholder {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #a0aec0;
            font-size: 24px;
        }

        .avatar-remove {
            display: none;
            position: absolute;
            top: -5px;
            right: -5px;
            width: 20px;
            height: 20px;
            background: #ff007a;
            color: white;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            cursor: pointer;
            border: none;
            z-index: 10;
        }
    </style>
</head>

<body class="h-screen flex items-center justify-center font-mono relative overflow-hidden">
    <!-- Scanline Overlay -->
    <div class="scanline"></div>

    <!-- Background Grid -->
    <div class="absolute inset-0 z-0 opacity-20"
        style="background-image: linear-gradient(#2d3748 1px, transparent 1px), linear-gradient(90deg, #2d3748 1px, transparent 1px); background-size: 30px 30px;">
    </div>

    <!-- Register Terminal -->
    <div
        class="relative z-10 w-full max-w-lg bg-surface border border-border rounded-lg shadow-[0_0_30px_rgba(0,0,0,0.5)] overflow-hidden flex flex-col max-h-[90vh]">

        <div class="bg-black/50 border-b border-border p-3 flex justify-between items-center flex-shrink-0">
            <div class="flex items-center space-x-2">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
            <div class="text-[10px] text-text-secondary tracking-widest">REGISTRATION_MODULE</div>
        </div>

        <div class="p-6 overflow-y-auto custom-scrollbar">
            <div class="text-center mb-6">
                <i class="fas fa-user-plus text-3xl text-bull mb-2"></i>
                <h2 class="text-xl font-bold text-white tracking-widest">NEW USER REGISTRATION</h2>
                <p class="text-text-secondary text-[10px] mt-1">CREATE SECURE IDENTITY FOR MARKETPLACE ACCESS</p>
            </div>

            <% if (locals.error && locals.error.length> 0) { %>
                <div
                    class="bg-bear/10 border border-bear/50 text-bear text-xs p-3 mb-6 rounded flex items-center gap-2">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>
                        <%= error %>
                    </span>
                </div>
                <% } %>

                    <!-- Social Login -->
                    <div class="grid grid-cols-2 gap-4 mb-6">
                        <!-- Google Button -->
                        <a href="/auth/google"
                            class="flex items-center justify-center gap-2 bg-white hover:bg-gray-200 text-gray-900 py-2 rounded text-xs font-bold transition border border-gray-300">
                            <svg width="14" height="14" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M17.64 9.20455C17.64 8.56636 17.5827 7.95273 17.4764 7.36364H9V10.845H13.8436C13.635 11.97 13.0009 12.9232 12.0477 13.5614V15.8195H14.9564C16.6582 14.2527 17.64 11.9455 17.64 9.20455Z"
                                    fill="#4285F4" />
                                <path
                                    d="M9 18C11.43 18 13.4673 17.1941 14.9564 15.8195L12.0477 13.5614C11.2418 14.1014 10.2109 14.4205 9 14.4205C6.65591 14.4205 4.67182 12.8373 3.96409 10.71H0.957275V13.0418C2.43818 15.9832 5.48182 18 9 18Z"
                                    fill="#34A853" />
                                <path
                                    d="M3.96409 10.71C3.78409 10.17 3.68182 9.59318 3.68182 9C3.68182 8.40682 3.78409 7.83 3.96409 7.29V4.95818H0.957275C0.347727 6.17318 0 7.54773 0 9C0 10.4523 0.347727 11.8268 0.957275 13.0418L3.96409 10.71Z"
                                    fill="#FBBC05" />
                                <path
                                    d="M9 3.57955C10.3214 3.57955 11.5077 4.03364 12.4405 4.92545L15.0218 2.34409C13.4632 0.891818 11.4259 0 9 0C5.48182 0 2.43818 2.01682 0.957275 4.95818L3.96409 7.29C4.67182 5.16273 6.65591 3.57955 9 3.57955Z"
                                    fill="#EA4335" />
                            </svg>
                            GOOGLE
                        </a>

                        <!-- GitHub Button -->
                        <a href="/auth/github"
                            class="flex items-center justify-center gap-2 bg-[#2b3137] hover:bg-[#24292e] text-white py-2 rounded text-xs font-bold transition border border-border">
                            <i class="fab fa-github"></i> GITHUB
                        </a>
                    </div>

                    <form action="/auth/register" method="POST" enctype="multipart/form-data" class="space-y-4">

                        <!-- Avatar Upload -->
                        <div class="flex justify-center mb-4">
                            <div style="position: relative;">
                                <div class="avatar-upload" onclick="document.getElementById('avatarInput').click()">
                                    <div class="avatar-placeholder" id="avatarPlaceholder">
                                        <i class="fas fa-camera text-text-secondary"></i>
                                    </div>
                                    <img src="" id="avatarPreview" class="avatar-preview" alt="Profile">
                                    <input type="file" name="avatar" id="avatarInput" accept="image/*"
                                        style="display: none;" onchange="previewImage(this)">
                                </div>
                                <button type="button" class="avatar-remove" id="removeBtn" onclick="removeImage()">
                                    <i class="fas fa-times"></i>
                                </button>
                                <div class="text-center text-[10px] text-text-secondary mt-1">UPLOAD ID PHOTO</div>
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] text-text-secondary mb-1">FULL NAME</label>
                                <input type="text" name="name" required placeholder="John Doe"
                                    class="w-full bg-bg border border-border rounded py-1.5 px-3 text-xs text-white focus:border-action outline-none font-mono">
                            </div>
                            <div>
                                <label class="block text-[10px] text-text-secondary mb-1">EMAIL ADDR</label>
                                <input type="email" name="email" required placeholder="student@iut-dhaka.edu"
                                    class="w-full bg-bg border border-border rounded py-1.5 px-3 text-xs text-white focus:border-action outline-none font-mono">
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] text-text-secondary mb-1">STUDENT ID</label>
                                <input type="text" name="studentId" required pattern="\d{9}" placeholder="190041234"
                                    class="w-full bg-bg border border-border rounded py-1.5 px-3 text-xs text-white focus:border-action outline-none font-mono">
                            </div>
                            <div>
                                <label class="block text-[10px] text-text-secondary mb-1">CONTACT NO</label>
                                <input type="tel" name="contactNumber" required placeholder="01712345678"
                                    class="w-full bg-bg border border-border rounded py-1.5 px-3 text-xs text-white focus:border-action outline-none font-mono">
                            </div>
                        </div>

                        <div>
                            <label class="block text-[10px] text-text-secondary mb-1">PASSWORD</label>
                            <input type="password" name="password" id="password" required placeholder="••••••••"
                                minlength="8"
                                class="w-full bg-bg border border-border rounded py-1.5 px-3 text-xs text-white focus:border-action outline-none font-mono">
                        </div>

                        <div>
                            <label class="block text-[10px] text-text-secondary mb-1">CONFIRM PASSWORD</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" required
                                placeholder="••••••••" minlength="8"
                                class="w-full bg-bg border border-border rounded py-1.5 px-3 text-xs text-white focus:border-action outline-none font-mono">
                        </div>

                        <button type="submit"
                            class="w-full bg-bull hover:bg-green-600 text-black font-bold py-2.5 rounded text-sm transition tracking-widest border border-green-700 shadow-[0_0_15px_rgba(0,227,150,0.3)] mt-2">
                            CREATE IDENTITY
                        </button>
                    </form>

                    <div class="mt-4 text-center text-xs text-text-secondary">
                        ALREADY REGISTERED? <a href="/auth/login"
                            class="text-action hover:text-white underline decoration-dashed underline-offset-4">LOGIN
                            HERE</a>
                    </div>
        </div>
    </div>

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('avatarPreview');
                    const placeholder = document.getElementById('avatarPlaceholder');
                    const removeBtn = document.getElementById('removeBtn');

                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    placeholder.style.display = 'none';
                    removeBtn.style.display = 'flex';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('avatarInput');
            const preview = document.getElementById('avatarPreview');
            const placeholder = document.getElementById('avatarPlaceholder');
            const removeBtn = document.getElementById('removeBtn');

            input.value = '';
            preview.src = '';
            preview.style.display = 'none';
            placeholder.style.display = 'flex';
            removeBtn.style.display = 'none';
        }
    </script>
</body>

</html>